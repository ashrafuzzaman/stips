<%#*<h1 style="background-color: #E2EDEF; margin-top: -20px; height: auto">Recent Posts</h1>%>
<table class="homepage">
  <% @news_items.each do |item| %>
    <tr class="<%= cycle('odd', 'even') %>">
      <td>
        <%= link_to item.title, news_item_url(item) %>
      </td>
    </tr>
  <% end %>
</table>
