<% content_for :body_content_left do %>
  <div class='inquiries'>
    <%= @page[:body] %>

    <% form_for @inquiry do |f| %>
      <%= f.error_messages :header_message => "Whoops there was a small problem",
                           :message => "The following problems need to be corrected:" %>

    <table>
      <tr>
        <td class='field'><%= f.required_label :name %></td>
        <td><%= f.text_field :name %></td>
