        <td class='field'><%= f.required_label :email %></td>
        <td><%= f.text_field :email %></td>
      </tr>
      <tr>
        <td class='field'><%= f.label :phone %></td>
        <td><%= f.text_field :phone %></td>
      </tr>
      <tr>
        <td class='field message_field'><%= f.label :message  %></td>
        <td><%= f.text_area :message, :rows => 8 %></td>
      </tr>
      <tr>
        <td <class='actions'><%= f.submit 'Send Message' %></td>
        <td><%= link_to "We value your privacy", "/pages/privacy-policy", :id => "privacy_link" if RefinerySetting.find_or_set(:show_contact_privacy_link, false) %></td>
      </tr>

