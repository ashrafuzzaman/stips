<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(course) -%>">
  <span class='title'>
    <%=h course.title %>
    <span class="preview">&nbsp;</span>

    <span class='actions'>
      <%= link_to refinery_icon_tag("application_go.png"), course_url(course),
          :title => 'View this course<br/><em>Opens in a new window</em>',
          :target => "_blank" %>
      <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_course_path(course),
           :title => 'Edit this course' %>
      <%= link_to refinery_icon_tag("delete.png"), admin_course_path(course),
          :class => "cancel confirm-delete",
          :title => 'Remove this course forever' %>
      <%= link_to refinery_icon_tag("application_go.png"), admin_courses_users_url(:course_id => course.id),
          :title => 'View this registered members for this course' %>
    </span>
  </span>
</li>
