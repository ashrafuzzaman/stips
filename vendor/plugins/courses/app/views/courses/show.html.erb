<% content_for :body_content_title do %>
  <%= @course.title %>
<% end %>

<% content_for :body_content_left do %>
  
  <div>
    <h3>Title</h3>
    <%= @course.title %>
  </div>
  
  <div>
    <h3>Start Date</h3>
    <%= @course.start_date %>
  </div>
  
  <div>
    <h3>Description</h3>
    <%= @course.description %>
  </div>
  
<% end %>

<% content_for :body_content_right do %>
  <h2>Other Courses</h2>
  <ul id="courses">
    <% @courses.each do |course| %>
      <li>
        <%= link_to course.title, course_url(course) %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= render :partial => "/shared/content_page" %>
